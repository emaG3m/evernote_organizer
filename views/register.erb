<div class="container">
  <div class="row">
    <div class="col-md-3 col-lg-3"></div>
    <form class="col-md-6 col-lg-6 register", method="post", action="/register">
      <div class="form-group">
        <input type="text" name="username" class="form-control" placeholder="Username" aria-describedby="basic-addon1">
      </div>

      <div class="form-group">
        <input type="password" name="password" class="form-control" placeholder="Password" aria-describedby="basic-addon2">
      </div>

      <div class="form-group">
        <input type="password" name="confirm_password" class="form-control" placeholder="Confirm Password" aria-describedby="basic-addon2">
      </div>

      <button type="register" class="btn btn-default">Register</button>
    </form>
    <div class="col-md-3 col-lg-3"></div>
  </div>
</div>
