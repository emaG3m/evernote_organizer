<div class="container">
  <div class="row">
    <div class="col-md-3 col-lg-3"></div>
    <% if !session['user_id'] %>
      <form class="col-md-6 col-lg-6 register", method="post", action="/login">
        <% if @error.present? %>
          <p class="error"> <%= @error %> </p>
        <% end %>
        <div class="form-group">
          <input type="text" name="email" class="form-control" placeholder="Username" aria-describedby="basic-addon1">
        </div>

        <div class="form-group">
          <input type="password" name="password" class="form-control" placeholder="Password" aria-describedby="basic-addon2">
        </div>
        <button type="register" id="login-btn" class="btn btn-default">Log In</button>
      </form>
    <% else %>
      <p> Logged in as <%= User.find_by_id(session['user_id']).email %> </p>
    <%end %>
    <div class="col-md-3 col-lg-3"></div>
  </div>
</div>

